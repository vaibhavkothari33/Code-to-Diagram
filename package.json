{
  "name": "code-to-diagram",
  "version": "1.0.0",
  "description": "VS Code extension that converts code into diagrams.",
  "main": "./src/extension.js",
  "scripts": {
    "compile": "npx tsc",
    "test": "echo \"No tests yet\"",
    "prepublishOnly": "npx vsce package"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onCommand:extension.generateDiagram"
  ],
  "categories": [
    "Other",
    "Visualization"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.generateDiagram",
        "title": "Generate Diagram"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.generateDiagram",
          "group": "navigation"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "mermaid": "^9.4.3"
  }
}
